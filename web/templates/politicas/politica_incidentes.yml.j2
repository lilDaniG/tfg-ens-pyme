# Política de Gestión de Incidentes
company: {{ company_name }}
responsable: {{ security_officer }}
canal_notificacion: {{ incident_channel }}
tiempo_respuesta_horas: {{ incident_response_time }}
procedimiento: >
  1. Detección y reporte inmediato.
  2. Clasificación de severidad.
  3. Contención y erradicación.
  4. Recuperación y análisis de lecciones aprendidas.
revisiones:
  frecuencia: semestral
